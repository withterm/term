{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "types": ["node"],
    "moduleResolution": "node"
  },
  "include": [
    "index.ts",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "test/**/*",
    "dist",
    "*.node",
    "*.js"
  ]
}